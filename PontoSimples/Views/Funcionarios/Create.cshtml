@model PontoSimples.Models.ViewModels.FuncionarioFormViewModel

@{
    ViewData["Title"] = "Cadastrar";
}

<h2>@ViewData["Title"]</h2>

<h4>Funcionarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Funcionarios.Matricula" class="control-label"></label>
                <input asp-for="Funcionarios.Matricula" class="form-control" />
                <span asp-validation-for="Funcionarios.Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionarios.Nome" class="control-label"></label>
                <input asp-for="Funcionarios.Nome" class="form-control" />
                <span asp-validation-for="Funcionarios.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionarios.SetorId" class="control-label"></label>
                <select asp-for="Funcionarios.SetorId" asp-items="@(new SelectList(Model.Setores,"Id","NomeSetor"))"
                class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Funcionarios.PIS" class="control-label"></label>
                <input asp-for="Funcionarios.PIS" class="form-control" />
                <span asp-validation-for="Funcionarios.PIS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionarios.HoraFuncId" class="control-label"></label>
                <select asp-for="Funcionarios.HoraFuncId" asp-items="@(new SelectList(Model.Horarios,"Id","Codigo"))"
                class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
