@model PontoSimples.Models.ViewModels.FuncionarioFormViewModel
@{
    ViewData["Title"] = "Cadastrar";
}

<h2>@ViewData["Title"]</h2>

<h4>Funcionarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Funcionario.Matricula" class="control-label"></label>
                <input asp-for="Funcionario.Matricula" class="form-control" />
                <span asp-validation-for="Funcionario.Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.Nome" class="control-label"></label>
                <input asp-for="Funcionario.Nome" class="form-control" />
                <span asp-validation-for="Funcionario.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.SetorId" class="control-label"></label>
                <select asp-for="Funcionario.SetorId" asp-items="@(new SelectList(Model.Setores,"Id","NomeSetor"))"
                        class="form-control">
                    <option>Seleione um Setor</option>
                </select>
                <span asp-validation-for="Funcionario.SetorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.PIS" class="control-label"></label>
                <input asp-for="Funcionario.PIS" class="form-control" />
                <span asp-validation-for="Funcionario.PIS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.HoraFuncId" class="control-label"></label>
                <select asp-for="Funcionario.HoraFuncId" asp-items="@(new SelectList(Model.Horarios,"Id","Descricao"))"
                        class="form-control">
                    <option>Selecione um Horário</option>
                </select>
                <span asp-validation-for="Funcionario.HoraFuncId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
