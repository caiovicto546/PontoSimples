@model PontoSimples.Models.Funcionario

@{
    ViewData["Title"] = "Deletar";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja deletar este funcionário?</h3>
<div>
    <h4>Funcionários</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Matricula)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Matricula)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Setor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Setor.NomeSetor)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PIS)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PIS)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.HoraFunc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HoraFunc.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-default" /> |
        <a asp-action="Index">Voltar para lista</a>
    </form>
</div>
