@model PontoSimples.Models.ViewModels.PontoFormViewModel
@{
    ViewData["Title"] = "Registro de Ponto";
}

<h2>@ViewData["Title"]</h2>

<h4>Procure seu nome na lista para registrar o ponto</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="Ponto.FuncionarioId" asp-items="@(new SelectList(Model.Funcionarios,"Id","Nome"))"
                        class="form-control">
                    <option>Escolha seu nome</option>
                </select>
                @*<span asp-validation-for="Ponto.FuncionarioId" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

