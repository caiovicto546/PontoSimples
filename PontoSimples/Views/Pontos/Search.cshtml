@model IEnumerable<PontoSimples.Models.Ponto>

@{
    ViewData["Title"] = "Busca";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">

            <div class="form-group">
                <div class="form-group">
                    <input type="hidden" class="form-control" name="idFunc" value=@ViewData["idFunc"] />
                </div>
                <div class="form-group">
                    <label for="minDate">Data Início</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Término</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
            @*<a asp-area="" asp-controller="Pontos" asp-action="PrintSearch">Imprimir</a>*@
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Busca Registro de Ponto</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Funcionario.Matricula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Funcionario.Nome)
                    </th>
                    <th>
                        @Html.DisplayName("Data")
                    </th>
                    <th>
                        @Html.DisplayName("Hora da Marcação")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Funcionario.Matricula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Funcionario.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Marcacao)
                    </td>
                    <td>
                        @Html.DisplayTextFor(modelitem => item.Marcacao.TimeOfDay).ToString().Substring(0, 5)
                    </td>
                </tr>
                }
            </tbody>
            <thead>
                <tr>
                    <td >
                        Total de linhas: @Model.Count().ToString()
                    </td>
                </tr>
            </thead>
        </table>
    </div>
</div>
