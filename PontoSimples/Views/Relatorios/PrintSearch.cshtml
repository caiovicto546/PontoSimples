@model IEnumerable<PontoSimples.Models.Ponto>

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Marcações de Ponto";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrintSearch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-lumen.css" />
</head>
<body>
    <!--CABEÇALHO-->
    <div>
        <table width="100%" style="border-collapse:collapse" align="left" border="1">
            <tr>
                <th align="left">
                    PontoSimples 1.0 - @DateTime.Now
                    <br />
                    DADOS DA EMRESA
                    <br />
                    @*Data Inicio: @ViewData["maxDate"] - Data Término: @ViewData["maxDate"]*@
                </th>
            </tr>
        </table>
    </div>
    <br />
    <br />
    <br />
    <!--FIM DO CABEÇALHO-->

    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Registro de Ponto</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="success">
                        <th>
                            @Html.DisplayNameFor(model => model.Funcionario.Matricula)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Funcionario.Nome)
                        </th>
                        <th>
                            @Html.DisplayName("Data")
                        </th>
                        <th align="right">
                            @Html.DisplayName("Hora da Marcação")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Funcionario.Matricula)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Funcionario.Nome)
                            </td>
                            <td>
                                @Html.DisplayTextFor(modelitem => item.Marcacao.Date).ToString().Substring(0,10)
                            </td>
                            <td align="center">
                                @Html.DisplayTextFor(modelitem => item.Marcacao.TimeOfDay).ToString().Substring(0, 5)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <table width="100%" height="80">
            <tr>
                <th align="left">___________________________________</th>
                <th align="right">___________________________________</th>
            </tr>
            <tr>
                <th align="left">Assinatura do Gestor</th>
                <th align="right">Assinatura Funcionário</th>
            </tr>
        </table>
    </div>

</body>
</html>
