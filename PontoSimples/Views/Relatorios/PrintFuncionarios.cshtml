@model IEnumerable<PontoSimples.Models.Funcionario>

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Funcionários cadastrados";
}

<!--CABEÇALHO-->
<div>
    <table width="100%" style="border-collapse:collapse" align="left" border="1">
        <tr>
            <th align="left">
                PontoSimples 1.0 - @DateTime.Now
                <br />
                DADOS DA EMRESA
            </th>
        </tr>
    </table>
</div>
<br/>
<br />
<br />
<!--FIM DO CABEÇALHO-->

<table style="border-collapse:collapse;" align="center" border="1" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PIS)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Matricula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PIS)
                </td>
            </tr>
        }
    </tbody>
</table>
