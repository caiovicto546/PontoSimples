@model IEnumerable<PontoSimples.Models.Setor>

@{
    ViewData["Title"] = "Setores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Cadastrar novo Setor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoSetor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeSetor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoSetor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeSetor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
