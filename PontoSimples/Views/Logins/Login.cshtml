@model PontoSimples.Models.Login

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Welcome">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="usuario" class="control-label">Usuário</label>
                <input asp-for="Usuario" name="usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="senha" class="control-label">Senha</label>
                <input asp-for="Senha" name="senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


